<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:hint="아이디"
            android:id="@+id/edi_inputid"/>
        <EditText
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:hint="패스워드"
            android:id="@+id/edi_inputpwd"/>
        <EditText
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:hint="이름"
            android:id="@+id/edi_inputname"/>
        <EditText
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:hint="전화번호"
            android:id="@+id/edi_inputphonum"/>
        <Button
            android:onClick="onClick"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="가입"
            android:id="@+id/btn_endJoin"/>

    </LinearLayout>
</LinearLayout>